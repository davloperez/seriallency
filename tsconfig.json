{
    "include": [
        "src/**/*.ts",
        "test/**/*.spec.ts"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "allowJs": false,
        "noImplicitAny": false,
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "lib": ["es2015.promise", "es5"]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}